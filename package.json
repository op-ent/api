{
  "name": "op-ent-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "yarn copy:env && node ace serve --watch",
    "copy:env": "copy .env.local .env",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "docker:attach": "docker exec -it adonis /bin/sh",
    "docke:attach:redis": "docker exec -it redis /bin/sh",
    "docker:attach:postgres": "docker exec -it postgres /bin/sh",
    "docker:prod": "docker-compose -f docker-compose.production.yml up",
    "docker:dev": "docker-compose -f docker-compose.development.yml --env-file .env.local up",
    "migrate": "node ace migration:run && node ace db:seed"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.8.0",
    "@japa/preset-adonis": "^1.1.0",
    "@japa/runner": "^2.0.9",
    "adonis-preset-ts": "^2.1.0",
    "copy": "^0.3.2",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^8.1.0",
    "prettier": "^2.7.1",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4"
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.1",
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/lucid": "^18.1.0",
    "@adonisjs/redis": "^7.3.1",
    "@adonisjs/repl": "^3.1.0",
    "adonis-autoswagger": "^1.7.8",
    "@novu/node": "^0.8.0",
    "axios": "^0.27.2",
    "defu": "^6.1.0",
    "luxon": "^2.4.0",
    "pg": "^8.7.3",
    "phc-argon2": "^1.1.3",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  }
}
